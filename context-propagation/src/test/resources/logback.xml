<configuration>

    <appender name='STDOUT' class='ch.qos.logback.core.ConsoleAppender'>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p %logger{0} [%t:%X{trackingId:-}] %m%n</pattern>
        </encoder>
    </appender>

    <root level='info'>
        <appender-ref ref='STDOUT' />
    </root>

    <logger name="io.micronaut" level="INFO" />

</configuration>
